<div class='hubmodal'>
  <i class='icon-x'></i>
  <div class='padded'>
    <h1>{{name}}</h1>
    <div class='hubmodal-address'>{{address}}</div>
    <p>{{description}}</p>
  </div>

  <div class='hubmodal-lower cf'>
    <ul>
      {{#each events}}
        <li>
          <dl>
            <dt>{{this.name}}</dt>
            <dd>{{{this.description}}}</dd>
          </dl>

          <div class='hubmodal-eventtime text-right'>{{this.time}}</div>
        </li>
      {{/each}}

    </ul>
    {{#if imageSource}}
      <img src='{{imageSource}}'>
    {{/if}}
  </div>
</div>